<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="sdu.comsci.orawon.bubbletea.menu">

    <ImageView
        android:id="@+id/imvpicmenu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/milk"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/h1"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintLeft_toRightOf="@+id/imvpicmenu"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/txtMenuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="33dp"
        android:textColor="@color/linkuser"
        android:textSize="@dimen/h1"
        app:layout_constraintLeft_toRightOf="@+id/imvpicmenu"
        app:layout_constraintTop_toBottomOf="@+id/txtMenuName" />

    <Button
        android:id="@+id/button6"
        android:layout_width="72dp"
        android:layout_height="21dp"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/btnorder"
        android:onClick="onClickorder"
        app:layout_constraintLeft_toRightOf="@+id/imvpicmenu"
        app:layout_constraintTop_toBottomOf="@+id/txtMenuPrice" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="66dp"
        android:layout_height="18dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/btnprice"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@+id/txtMenuPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtMenuName"
        android:layout_marginStart="45dp" />

</android.support.constraint.ConstraintLayout>
